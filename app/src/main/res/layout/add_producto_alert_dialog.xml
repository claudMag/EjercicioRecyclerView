<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/txtNombreAddProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_nombre_producto"
        android:padding="5dp" />

    <EditText
        android:id="@+id/txtPrecioAddProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_cantidad_producto"
        android:inputType="numberDecimal"
        android:padding="5dp" />

    <EditText
        android:id="@+id/txtCantidadAddProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_precio_producto"
        android:inputType="number"
        android:padding="5dp" />

    <TextView
        android:id="@+id/txtImporteTotalAddProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>